{
  "info": {
    "_postman_id": "d97c0a30-fc4d-44fb-bfaf-18fb48806ce8",
    "name": "Backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Authenticate",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if(pm.response.code == 200) {",
                  "    const token = pm.response.json().token;",
                  "",
                  "    pm.collectionVariables.set('token', token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"user\": {\n        \"email\": \"{{user_email}}\",\n        \"password\": \"{{user_password}}\"\n    }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{backend-url}}/auth",
              "host": ["{{backend-url}}"],
              "path": ["auth"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "create",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if(pm.response.code == 201) {",
                  "    const user = pm.response.json().user;",
                  "    const password = JSON.parse(pm.request.body.raw).user.password;",
                  "",
                  "    pm.collectionVariables.set('user_id', user.id);",
                  "    pm.collectionVariables.set('user_email', user.email);",
                  "    pm.collectionVariables.set('user_password', password);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"user\": {\n        \"email\": \"jhon.doe@domain.com\",\n        \"password\": \"super_secret\"\n    }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{backend-url}}/users",
              "host": ["{{backend-url}}"],
              "path": ["users"]
            }
          },
          "response": []
        },
        {
          "name": "list",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{backend-url}}/users",
              "host": ["{{backend-url}}"],
              "path": ["users"]
            }
          },
          "response": []
        }
      ]
    },
